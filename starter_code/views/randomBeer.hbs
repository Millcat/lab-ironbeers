{{!-- You should display an image, name, description, tagline, food pairing and brewer tips. --}}


<div class="randomBeer">

    <div class="randomBeer-image">
        <img src="{{randomBeers.image_url}}" alt="{{randomBeers.name}}">
    </div>

    <div class="randomBeer-description">
        <h1>{{randomBeers.name}}</h1>
        <h2>{{randomBeers.tagline}}</h2>
        <p>{{randomBeers.description}}</p>
        <h3>Food Pairing</h3>
        <ul class="foodPairing">
            {{#each randomBeers.food_pairing}}
            <li>
                {{this}}
            </li>
            {{/each}}
        </ul>
        <p><span>Brewers Tips: </span>{{randomBeers.brewers_tips}}</p>
    </div>

</div>